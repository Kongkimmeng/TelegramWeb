@page "/"
@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Profile</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Profile</h4>
                </div>
                <div class="card-body">
                    <p><strong>Username:</strong> @(user?.Identity?.Name ?? "Not set")</p>
                    <p><strong>Role:</strong> @(string.Join(", ", user?.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value) ?? new List<string>()))</p>
                    <p><strong>Employee ID:</strong> @(user?.FindFirst("EmpID")?.Value ?? "Not set")</p>
                    <p><strong>Team:</strong> @(user?.FindFirst("Team")?.Value ?? "Not set")</p>
                    <a class="btn btn-outline-danger btn-sm" href="/Account/Logout">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ClaimsPrincipal? user;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        user = authState.User;


    }
}
