@page
@model Telegram_Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign in";
}
<title>Login</title>

<link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #f5f5f5;">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px; border-radius: 1rem; padding:0px 20px 0px 20px">
        <div class="card-body">
            <h3 class="card-title text-center">Sign in</h3>

            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input name="Input.Username" class="form-control" placeholder="Enter username" />
                    <span class="text-danger" asp-validation-for="Input.Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input name="Input.Password" type="password" class="form-control" placeholder="Enter password" />
                    <span class="text-danger" asp-validation-for="Input.Password"></span>
                </div>

                <div class="form-check mb-3" style="display:none">
                    <input name="Input.RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>

                <input type="hidden" name="Input.ReturnUrl" />

                <button type="submit" class="btn btn-primary w-100 mb-3">Sign in</button>

                <div class="text-center text-danger" asp-validation-summary="All"></div>
            </form>

          @*   <div class="text-center mt-3">
                <a href="/Account/ForgotPassword">Forgot password?</a> |
                <a href="/Account/Register">Sign up</a>
            </div> *@
        </div>
    </div>
</div>